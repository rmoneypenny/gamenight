
<% if logged_in? %>
  <li> <%=link_to "Log Out", sessions_path, :method => "delete" %> </li>
<% else %>
  <li>
    <%= form_tag sessions_new_path, :method => 'post' do %>
      <%= label_tag "Username" %>
      <%= text_field_tag :username %>
      <%= label_tag "Password" %>
      <%= password_field_tag :password %>
      <%= submit_tag "Log In" %>
    <% end %>
  </li>
  <li><%= link_to "Register", users_new_path %> </li>
<% end %>